<meta name="msapplication-TileColor" content="#ffffff">
<meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
<meta name="theme-color" content="#ffffff">

    </head>
    <body class="open-sans ">
        <div class="padding">

<!-- <hr class="darkBlue "/> -->
            <div class="padding azure rounded header">
            <p id="headline" class="fw-800 montserrat text-lg white">Reviews</p>
        </div>
        <!-- <hr class="darkBlue margin-lg"/> -->
        
        </div>
       <div class="container">
           <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12">
                <div  id="stars" class="section">
                    <p id="headline" class="fw-800 montserrat text-xl"><%-reviewScore.toString().slice(0,3) %></p><br/>
                    <span id="stars" class="beyondBlue ">

                        <% for(i=0; i<reviewScoreRoundUp; i++){ %>
                            <%-starIconLg %>
                            <% } %>
                    </span> <br/>
                    <p id="headline" class="fw-800 montserrat text">Based on <%-reviewNum %> Reviews</p>
                </div>
                
                <!-- <%-include("scriptlets/starlines") %> -->
  
            </div> 
            <div class=" pad-top-lg col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12">
                <div id="scriptlet" class="section">
                    <%-include("scriptlets/starlines") %>
                </div>
                
                
            </div>              
                    <div class=" pad-top-lg col-xl-5 offset-xl-1 col-lg-5 offset-lg-1 col-md-12 col-sm-12 col-xs-12">
                        <div id="buttons" class="section">
                            <button id="askButton" class="hvr-bob button black br-white box-shade margin-sm"><p class="pad-top fw-600 text-sm"><i class="far fa-comments pad-right-sm"></i>Ask a Question</p></button>
                          
                        <button id="composeButton" class="hvr-bob button black br-white box-shade margin-sm"><p class="pad-top fw-600 text-sm"><i class="far fa-edit pad-right-sm"></i>Write Your Review</p></button>
                        </div>
                        
                        
                    </div>
            <div class=" pad-top-xl col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div id="toggle" class="section align-l pad-top">
                    <button id="toggleCompose" class=" text-sm button-open padding-sm br-white bold">Reviews <span class="beyondSlate text-sm"> <%-reviewNum %></span></button> 
                    <button id="toggleQuestion" class="text-sm button-open padding-sm br-white bold">Questions <span class="beyondSlate text-sm"><%-questionNum %> </span></button>
                </div>
            </div>            
           </div>
           <hr class="darkBlue"/>
           <hr class="darkBlue"/>
           <%-include("compose")%>
           <%-include("ask")%>
           <%-include("review")%>
           <%-include("question")%>
       </div>
        <!-- jQuery CDN -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <!-- Axios Http Requests-->
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <!-- Project index script -->
        <script src=".././public/index.js" async defer></script>
    </body>
</html>